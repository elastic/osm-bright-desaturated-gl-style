{
  "layers": [
    {
      "id": "airport-label-major",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "aerodrome_label",
      "minzoom": 10,
      "filter": [
        "all",
        [
          "has",
          "iata"
        ]
      ],
      "layout": {
        "icon-image": "airport_11",
        "icon-size": 1,
        "text-anchor": "top",
        "text-field": "{name:latin}\n{name:nonlatin}",
        "text-font": [
          "Noto Sans Regular"
        ],
        "text-max-width": 9,
        "text-offset": [
          0,
          0.6
        ],
        "text-optional": true,
        "text-padding": 2,
        "text-size": 12,
        "visibility": "visible"
      },
      "paint": {
        "text-color": "rgba(117,117,117,1)",
        "text-halo-blur": 0.5,
        "text-halo-color": "rgba(255,255,255,1)",
        "text-halo-width": 1
      },
      "order": 102
    }
  ]
}